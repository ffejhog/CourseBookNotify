<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jeffreyneer.coursebooknotify">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"

        >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppTheme.Light.Green">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AddClass_Activity"
            android:theme="@style/Theme.AppTheme.Light.Green">

        </activity>

        <activity android:name=".Settings_Activity"
            android:theme="@style/Theme.AppTheme.Light.Green">

        </activity>

        <receiver android:name="AlarmReceiver">
            <intent-filter>
                <action android:name="com.jeffreyneer.coursebooknotify.alarm" />
            </intent-filter>
        </receiver>

    </application>

</manifest>